    <!--文件上传-->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize"   value="20480000" /> <!-- 文件上传限制 10 M -->
        <property name="maxInMemorySize" value="102400" />   <!-- 内存保存键值 100k-->
        <property name="defaultEncoding" value="UTF-8" />     <!-- 默认字符集 UTF-8 -->
        <property name="resolveLazily" value="true"/>
